	function actionForm(action){
		document.forms[0].action.value = action; document.forms[0].submit();	
	} 
	
	function showErrors(errors){
		 var obj = $('errorDiv');
		 obj.style.display = "block"; 
		 obj.innerHTML = errors;
	}