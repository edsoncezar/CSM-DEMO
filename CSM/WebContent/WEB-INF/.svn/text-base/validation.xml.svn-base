<!DOCTYPE form-validation PUBLIC "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN" "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">
<form-validation>
	<global />
	<formset>
	
	  <form name="formRegister">
             <field property="name" depends="required,minlength">
         	     <arg0 key="formRegister.name" />
         	     <arg1 name="minlength" key="${var:minlength}" resource="false" />                    
                     <var>
                       <var-name>minlength</var-name>
                       <var-value>2</var-value>
                     </var>
     	    </field>                                         
        
            <field property="mail" depends="required,minlength">
         	     <arg0 key="formRegister.mail" />
         	     <arg1 name="minlength" key="${var:minlength}" resource="false" />                    
                     <var>
                       <var-name>minlength</var-name>
                       <var-value>2</var-value>
                     </var>
     	    </field>                       

		  <field property="state" depends="required,minlength">
         	     <arg0 key="formRegister.state" />
         	     <arg1 name="minlength" key="${var:minlength}" resource="false" />                    
                     <var>
                       <var-name>minlength</var-name>
                       <var-value>2</var-value>
                     </var>
     	    </field>   

		 <field property="address" depends="required,minlength">
         	     <arg0 key="formRegister.address" />
         	     <arg1 name="minlength" key="${var:minlength}" resource="false" />                    
                     <var>
                       <var-name>minlength</var-name>
                       <var-value>2</var-value>
                     </var>
     	    </field>   
        
        <field property="city"><arg0 key="formRegister.city" /></field><field property="password" depends="required,minlength"><arg0 key="formRegister.password" /><arg1 name="minlength" key="${var:minlength}" /><var><var-name>minlength</var-name><var-value>6</var-value></var></field></form>
		
	</formset>
</form-validation>
