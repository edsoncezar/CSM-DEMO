	<script>
			treeGrid=new dhtmlXTreeGridObject("treeboxbox_tree","100%","100%",0);
			treeGrid.tree.setImagePath("../imgs/");
			treeGrid.tree.enableCheckBoxes(1);
			
			treeGrid.loadXML("treegrid.xml");
			
			treeGrid2=new dhtmlXTreeGridObject("treeboxbox_tree2","100%","100%",0);
			treeGrid2.tree.setImagePath("../imgs/");
			treeGrid2.tree.enableCheckBoxes(1);
			treeGrid2.tree.enableThreeStateCheckboxes(true);
			treeGrid2.loadXML("treegrid.xml");
						
	</script>
	


<br><br>

</body>
