<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
    <class
        name="br.com.alcatellucent.csm.beans.TrafficPolicy"
        table="trafficpolicy"
        lazy="false">

        <id	name="id" column="id"  type="java.lang.String" >
              <generator class="guid"></generator> 
        </id>
       
        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="name"
        />
        
        
          <property
            name="contextId"
            type="java.lang.String"
            update="true"
            insert="true"
            column="contextid"
        />
        
        
        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            column="description"
        />
        
        <property
            name="isActive"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="active"
        />  
        
    </class>
</hibernate-mapping>
